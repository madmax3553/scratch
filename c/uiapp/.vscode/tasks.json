{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
             "args": [
                "-g",                // Add debug symbols
                "main.c",
                "-o",
                "uiapp",
                "-lraylib",         // Required library
                "-lm",             // Math library
                "-Wall"            // Warnings
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
